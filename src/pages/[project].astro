---
import Layout from "../layouts/Layout.astro";
import { PROJECTS } from "../data/projects.js";
import { InferencePriority, resolveTypeReferenceDirective } from "typescript";
export function getStaticPaths() {
  return [{ params: { project: "gestor-escolar" } }];
}
const { project } = Astro.params;
const info = PROJECTS.find((x) => x.id == project);
if (!info) {
  return Astro.redirect("Index ");
}
import SocialPill from "../components/SocialPill.astro";
import GitHubIcon from "../components/icons/GitHub.astro";
---

<Layout title={`Proyecto ${info.tittle}`} description="proyectos">
  <main class="w-full lg:w-[780px] mx-auto sm:px-10 px-6">
    <section class="body-font py-10">
      <div
        class="container mx-auto flex mb-10 px-5 md:flex-row flex-col items-center justify-center"
      >
        <div class="lg:flex-grow flex flex-col items-center text-center">
          <h1
            class="title-font sm:text-4xl text-3xl font-extrabold text-[#094067]"
            transition:name={info.tittle}
          >
            {info.tittle}<br class="hidden lg:inline-block" />
          </h1>
          <h2
            class="title-font sm:text-3xl text-2xl mb-4 font-medium text-[#90b4ce]"
          >
            {info.company}
          </h2>
        </div>
      </div>
      <div id="custom-controls-gallery" class="relative mb-10">
        <div class="relative h-56 overflow-hidden rounded-lg md:h-96 mb-5">
          <a href={info.github} target="_blank" title="Repositorio GitHub">
            <img
              src={info.image}
              class="absolute block duration-200 max-w-full h-auto -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2 hover:scale-110 transition-all hover:opacity-80"
              alt=""
              transition:name={info.id}
            />
          </a>
        </div>
        <div>
          <ul class="gap-x-2 flex items-center justify-center mb-5">
            {
              info.tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-lg text-[8px] xl:text-[14px] lg:text-[12px] hover:scale-105 transition-all cursor-default ${tag.class} py-1 px-2 border border-white/10 flex  items-center`}
                  >
                    <tag.icon class="size-6" />
                    {tag.name}
                  </span>
                </li>
              ))
            }
          </ul>
        </div>
        <p
          class="leading-relaxed text-start text-[#5f6c7b] text-pretty"
          transition:name={info.description}
        >
          {info.descriptioncomplete}
        </p>
      </div>
      <div class="flex justify-start">
        <a
          href="/#proyectos"
          class="py-3 px-4 inline-flex items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-blue-200 transition-all duration-300 text-blue-800 hover:bg-blue-300 disabled:opacity-50 disabled:pointer-events-none dark:hover:bg-blue-900 dark:text-blue-400 dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600"
        >
          Volver
        </a>
      </div>
    </section>
  </main>
</Layout>
