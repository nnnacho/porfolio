---
import { PROJECTS } from "../data/projects.js";
---

<section class="py-20">
  <div class="max-w-xl mx-auto mb-12">
    <div class="text-center">
      <div class="relative flex flex-col items-center">
        <h2 class="text-4xl font-extrabold text-[#094067] dark:text-[#fffffe]">
          Proyectos
        </h2>
        <div class="flex mt-1 mb-10 overflow-hidden rounded w-14">
          <div class="flex-1 h-2 bg-[#3da9fc] dark:bg-[#ff8906]"></div>
        </div>
      </div>
    </div>
  </div>
  {
    PROJECTS.map(({ tittle, image, description, link, github, tags, id }) => (
      <div class="flex justify-center items center mb-8">
        <div class="flex flex-col items-center bg-white border border-gray-200 rounded-lg shadow md:flex-row md:max-w-xl hover:bg-gray-100 hover:scale-105 transition-all dark:bg-[#fffffe]">
          <div class="flex flex-col justify-between p-4 leading-normal mb-3">
            <>
              <h5
                class="mb-2 text-2xl font-bold tracking-tight text-[#094067] dark:text-[#0f0e17] "
                transition:name={tittle}
              >
                {tittle}
              </h5>
              <p
                class="mb-3 font-normal text-[#5f6c7b] dark:text-[#2e2f3e]"
                transition:name={description}
              >
                {description}
              </p>
              <div class="flex justify-end">
                <a
                  class="group relative inline-flex items-center
                    border border-[#094067] overflow-hidden rounded bg-[#ef4565] dark:bg-[#e53170] px-8 py-3 text-white focus:outline-none focus:ring active:bg-indigo-500"
                  href={`/${id}`}
                >
                  <span class="absolute -end-full transition-all group-hover:end-4">
                    <svg
                      class="h-5 w-5 rtl:rotate-180"
                      xmlns="http://www.w3.org/2000/svg"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M17 8l4 4m0 0l-4 4m4-4H3"
                      />
                    </svg>
                  </span>

                  <span class="text-sm font-medium text-[#fffffe] transition-all group-hover:me-4">
                    Ver m√°s
                  </span>
                </a>
              </div>
            </>
          </div>
        </div>
      </div>
    ))
  }
</section>
